{% comment %}
  Product Slider Section
{% endcomment %}

<style>
  .product-slider-heading h2 {
    font-family: Inter;
    font-size: 48px;
    font-weight: 600;
    line-height: 58.09px;
    text-align: center;
  }
  .swiper-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    padding: 0px 10px;
  }
  .swiper-slide {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    overflow: hidden;
    border-radius: 10px;
    border-radius: 25px;
  }
  .swiper-slide img {
    width: 100%;
    height: auto;
    display: block;
  }
  .caption {
    position: absolute;
    bottom: 0;
    width: 100%;
    background: rgb(255, 255, 255);
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 1) 100%);
    color: white;
    padding: 20px;
    text-align: left;
  }
  .caption h3 {
    color: white;
    font-family: Inter;
    font-size: 20px;
    font-weight: 600;
    line-height: 24.2px;
    text-align: left;
    margin: 0;
    margin-bottom: 10px;
  }
  .caption p {
    margin: 5px 0;
    font-family: Inter;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    text-align: left;
  }
  .product-slider-footer {
    position: relative;
    margin: 0 auto;
    margin-top: 40px;
    width: 100vw;
  }
  .swiper-button-next,
  .swiper-button-prev {
    position: relative;
    color: #000;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--grey-1, #e3e3e3);
    margin-top: 0px;
  }
  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 16px;
  }
  .swiper-pagination {
    position: relative;
  }
  .swiper-pagination-bullet {
    background: #000 !important;
  }
  .swiper-pagination-bullets.swiper-pagination-horizontal {
    bottom: 0;
  }
  .swiper-nav-area {
    display: flex;
    align-items: center;
  }
  .swiper-nav-area {
    display: flex;
    align-items: center;
    width: fit-content;
    justify-content: space-between;
    margin: 0 auto;
  }
  .swiper-nav-item {
    margin: 0 15px;
  }
  @media (max-width: 767px) {
    .product-slider-heading h2 {
      padding-left: 20px;
      padding-right: 20px;
      font-size: 28px;
      line-height: 38px;
    }
    .swiper-container {
      padding: 0px 20px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var slidesPerViewMobile = {{ section.settings.slides_per_view_mobile | default: 1 }};
    var slidesPerViewTablet = {{ section.settings.slides_per_view_tablet | default: 2 }};
    var slidesPerViewDesktop = {{ section.settings.slides_per_view_desktop | default: 3 }};

    var swiper = new Swiper(".swiper-container", {
      slidesPerView: slidesPerViewMobile,
      spaceBetween: 30,
      freeMode: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      breakpoints: {
        768: {
          slidesPerView: slidesPerViewTablet,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: slidesPerViewDesktop,
          spaceBetween: 30,
        }
      }
    });
  });
</script>

<div class="product-slider">
  <div class="product-slider-heading">
    <h2>Wunderschön - Testing</h2>
  </div>
  <div class="product-slider-heading">
    <h2>Wunderschön - Ergebnisse unserer Kunden</h2>
  </div>
  <div class="product-slider-content">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'product' %}
            {% assign product = all_products[block.settings.product] %}
            {% if product and product.published_at %}
              {% render 'product-slider-slide', product: product %}
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
      <div class="product-slider-footer">
        <div class="swiper-nav-area">
          <div class="swiper-nav-item">
            <div class="swiper-button-prev"></div>
          </div>
          <div class="swiper-nav-item">
            <div class="swiper-pagination"></div>
          </div>
          <div class="swiper-nav-item">
            <div class="swiper-button-next"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Slider",
  "settings": [
    {
      "type": "number",
      "id": "slides_per_view_mobile",
      "label": "Slides per view (mobile)",
      "default": 1
    },
    {
      "type": "number",
      "id": "slides_per_view_tablet",
      "label": "Slides per view (tablet)",
      "default": 2
    },
    {
      "type": "number",
      "id": "slides_per_view_desktop",
      "label": "Slides per view (desktop)",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
